  "ingestion_strategy": {
    "preferred_method_order": ["rss_feed", "atom_feed", "api_endpoint", "scraping"],
    "retry_policy": {
      "max_retries": 3,
      "backoff_multiplier": 2,
      "initial_delay_ms": 1000
    },
    "caching": {
      "enabled": true,
      "ttl_minutes": 30,
      "cache_key_strategy": "url_hash"
    },
    "deduplication": {
      "enabled": true,
      "match_threshold": 0.85,
      "fields": ["title", "url", "published_date"]
    },
    "error_handling": {
      "log_failures": true,
      "alert_on_consecutive_failures": 3,
      "fallback_to_scraping": true
    }
  },
  "output_schema": {
    "article": {
      "id": "string (generated hash)",
      "source_id": "string (from sources array)",
      "source_name": "string",
      "title": "string (required)",
      "url": "string (required, canonical)",
      "excerpt": "string (optional)",
      "content": "string (full text if available)",
      "published_at": "ISO 8601 datetime",
      "scraped_at": "ISO 8601 datetime",
      "author": "string (optional)",
      "image_url": "string (optional)",
      "category": "string (optional)",
      "tags": "array of strings (optional)",
      "language": "string (ISO 639-1)",
      "reliability_score": "integer (0-100, from source)",
      "source_type": "string (rss|scraping|api)",
      "metadata": {
        "word_count": "integer",
        "has_image": "boolean",
        "domain": "string",
        "is_institutional": "boolean"
      }
    }
  },
