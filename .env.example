# ========================================
# AMBOS - Environment Variables Template
# ========================================
# Copy this file to .env.local for development
# For production, set these in your hosting platform

# ========================================
# APPLICATION
# ========================================
NODE_ENV=production
VITE_APP_NAME=AmbOS
VITE_APP_VERSION=2.0.0
VITE_APP_DOMAIN=https://ambos.dev

# ========================================
# SUPABASE (Your own instance)
# ========================================
# Get these from your Supabase project: https://app.supabase.com
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_DB_PASSWORD=your-db-password-here

# ========================================
# AI PROVIDERS (Choose one or multiple)
# ========================================
# Option 1: OpenAI (Recommended for production)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORG_ID=org-your-org-id

# Option 2: Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Option 3: Google Gemini
GOOGLE_AI_API_KEY=your-google-ai-key-here
GOOGLE_AI_MODEL=gemini-pro

# Option 4: Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4

# ========================================
# NEWS APIs
# ========================================
NEWSAPI_KEY=your-newsapi-key-here
GNEWS_API_KEY=your-gnews-key-here
MEDIASTACK_KEY=your-mediastack-key-here

# ========================================
# OSINT / Social Media APIs
# ========================================
# Twitter/X (via RapidAPI or Official API)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# BlueSky
BLUESKY_IDENTIFIER=your-handle.bsky.social
BLUESKY_PASSWORD=your-app-password

# Google Custom Search (for web OSINT)
GOOGLE_SEARCH_API_KEY=your-google-search-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# ========================================
# CACHING & STORAGE (Optional but Recommended)
# ========================================
# Redis for caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# S3-compatible storage for large files
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=ambos-storage
S3_ACCESS_KEY_ID=your-s3-access-key
S3_SECRET_ACCESS_KEY=your-s3-secret-key
S3_REGION=us-east-1

# ========================================
# MONITORING & LOGGING
# ========================================
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# PostHog for analytics (optional)
POSTHOG_API_KEY=your-posthog-key
POSTHOG_HOST=https://app.posthog.com

# ========================================
# EMAIL (for alerts and notifications)
# ========================================
# SendGrid
SENDGRID_API_KEY=SG.your-sendgrid-key
SENDGRID_FROM_EMAIL=noreply@ambos.dev

# Or Resend (recommended)
RESEND_API_KEY=re_your-resend-key

# ========================================
# AUTHENTICATION (if moving away from Supabase Auth)
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-session-secret

# ========================================
# SECURITY
# ========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://ambos.dev,https://www.ambos.dev

# Encryption key for sensitive data
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# ========================================
# COMMERCIAL FEATURES
# ========================================
# Stripe for billing
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# License validation server
LICENSE_SERVER_URL=https://license.ambos.dev
LICENSE_API_KEY=your-license-api-key

# ========================================
# DEPLOYMENT
# ========================================
# CI/CD
DEPLOY_HOOK_URL=https://your-deploy-hook-url
GITHUB_TOKEN=ghp_your-github-token

# Docker
DOCKER_REGISTRY=ghcr.io/your-org/ambos
DOCKER_TAG=latest

# ========================================
# FEATURE FLAGS
# ========================================
FEATURE_AI_ENSEMBLE=false
FEATURE_REALTIME_ALERTS=true
FEATURE_COLLABORATION=false
FEATURE_ADVANCED_EXPORT=true
FEATURE_MOBILE_APP=false

# ========================================
# DEVELOPMENT ONLY
# ========================================
# Leave empty in production
VITE_DEV_MODE=false
DEBUG_MODE=false
MOCK_AI_RESPONSES=false
